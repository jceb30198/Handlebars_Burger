<h1>Eat-Da-Burger</h1>

<img src="/assets/images/burger.png">

<div class="row">

    <div class="col s6">
        <h2 id="hungry">Hungry?</h2>
        <ul class="border green">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> hungry-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col s6">
        <h2 id="devoured">Devoured!</h2>
        <ul class="border red">
            {{#each burgers}}
                {{#if devoured}}
                    {{> devoured-block devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

</div>

<br />

<div class="row form">
    <h2 id="create">Create-A-Burger!</h2>
    <form class="col s12">
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <i class="material-icons prefix">sentiment_very_satisfied</i>
                <input id="icon-prefix" type="text" class="validate">
                <label for="icon-prefix" name="burgerInput" class="active">Input Burger Here!
                </label>
                <a class="btn" id="create-button">Submit
                    <i class="material-icons right">sentiment_very_satisfied</i>
                </a>

            </div>
        </div>
    </form>
</div>